<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aideFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFC"
    android:orientation="vertical">

    <!-- Header avec gradient -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A6C4F2"
        android:padding="24dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_help"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centre d'aide"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment pouvons-nous vous aider ?"
                android:textSize="14sp"
                android:textColor="#E3F2FD"
                android:layout_marginTop="4dp"
                android:alpha="0.9" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Contenu principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Barre de recherche -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="2dp"
                card_view:cardBackgroundColor="#FFFFFF"/>

            <!-- Section Actions Rapides -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actions rapides"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="28dp">

                <!-- Carte 1: Tutoriels -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTutorials"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="3dp"
                    card_view:cardBackgroundColor="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_effect">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/action_card_background">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_tutorial" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tutoriels"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginTop="12dp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guides vidÃ©o"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Carte 2: Contact -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardContact"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="3dp"
                    card_view:cardBackgroundColor="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_effect">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/action_card_background">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_support" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginTop="12dp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nous contacter"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

