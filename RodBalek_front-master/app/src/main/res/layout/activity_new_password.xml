<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".forget_password.NewPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="220dp"
            android:layout_height="130dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo_login"
            android:scaleType="centerCrop" />

        <!-- Titre principal -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Définir un nouveau mot de passe"
            android:textColor="#1A237E"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Sous-titre -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veuillez entrer et confirmer votre nouveau mot de passe."
            android:textColor="#555555"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="28dp" />

        <!-- Champ nouveau mot de passe -->
        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nouveau mot de passe"
            android:inputType="textPassword"
            android:padding="14dp"
            android:backgroundTint="#1A237E"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Champ confirmer mot de passe -->
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmer le mot de passe"
            android:inputType="textPassword"
            android:padding="14dp"
            android:backgroundTint="#1A237E"
            android:textColor="#000000"
            android:layout_marginBottom="28dp" />

        <!-- Bouton confirmer -->
        <Button
            android:id="@+id/btnConfirmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmer"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="#1A237E"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Message d’erreur -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Les mots de passe ne correspondent pas."
            android:textColor="#D32F2F"
            android:visibility="gone"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
